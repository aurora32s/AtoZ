<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/item_user_minHeight"
    android:layout_margin="@dimen/item_user_margin">

    <!--USER POST THUMBNAIL-->
    <ImageView
        android:id="@+id/item_user_thumbnail"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:adjustViewBounds="true"
        android:background="@color/item_user_background"/>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="@dimen/item_user_margin">

        <!--POST NAME-->
        <TextView
            android:id="@+id/item_user_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/item_user_text"
            android:textStyle="bold"/>

        <!--POST INFORMATION-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--LIKE NO-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_user_likeNo_height"
                android:adjustViewBounds="true"
                android:src="@drawable/heart"/>
            <TextView
                android:id="@+id/item_user_likeNo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/item_user_likeNo_padding"
                android:textColor="@color/item_user_text"
                android:textSize="@dimen/item_user_likeNo_textSize"
                android:textStyle="bold"/>

            <!--COMMENT NO-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_user_likeNo_height"
                android:adjustViewBounds="true"
                android:src="@drawable/comment"/>
            <TextView
                android:id="@+id/item_user_commentNo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/item_user_likeNo_padding"
                android:textColor="@color/item_user_text"
                android:textSize="@dimen/item_user_likeNo_textSize"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>