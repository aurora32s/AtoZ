<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/dialog_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/dialog_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ci_drawable="@drawable/drawable_black_radius"
        app:ci_height="@dimen/indicator_size"
        app:ci_width="@dimen/indicator_size"
        app:ci_margin="@dimen/indicator_margin"/>

</LinearLayout>